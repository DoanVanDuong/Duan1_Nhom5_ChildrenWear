<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/khung4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tilId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản Phẩm :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tilTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lvTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tilmau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Màu :"

            android:textSize="20dp"
            android:layout_marginStart="50dp" />

        <TextView
            android:id="@+id/lvMau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tilSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Lượng:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lvSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tilSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size :"
            android:textSize="20dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/lvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tilGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lvGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tilHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãng :"
            android:textSize="20dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/lvHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/nutBam"
        android:text="Hủy"
        android:layout_marginLeft="80dp"
        android:textSize="15dp" />

</LinearLayout>